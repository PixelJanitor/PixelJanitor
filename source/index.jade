doctype html
html(lang="en")
  head
    title PixelJanitor
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" type="text/css" href="stylesheets/styles.css")
    script(type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js")
    script(type="text/javascript" src="http://www.parsecdn.com/js/parse-latest.js")
    script(type="text/javascript" src="javascript/jribbble.js")
    script(type="text/javascript" src="javascript/scripts.js")

  body  
        
    header.primary-header
      nav.primary-nav
        a.primary-nav-item(href="http://dribbble.com/pixeljanitor" target="_blank")
          img(src="images/dribbble.svg")
        button.primary-nav-item.contact-form-show
          img(src="images/email.svg")
        a.primary-nav-item(href="http://github.com/pixeljanitor" target="_blank")
          img(src="images/github.svg")
    
    section.hero-content
      h1.logo PIXELJANITOR
      .pixel-flower
        .pixel-flower-petal
        .pixel-flower-petal
        .pixel-flower-petal
        .pixel-flower-petal
        .pixel-flower-petal
        .pixel-flower-petal
        .pixel-flower-petal
        .pixel-flower-petal
      section.contact
        form#contact-form
          .contact-form-name
            input(type="text" name="name" id="contact-name" spellcheck="false" required)
            label(for="contact-name") NAME
          .contact-form-email
            input(type="email" name="email" id="contact-email" spellcheck="false" required)
            label(for="contact-email") EMAIL ADDRESS
          .contact-form-message
            textarea(name="message" id="contact-message" required)
            label(for="contact-message") MESSAGE
          button.contact-form-submit SEND MESSAGE
    
    section.portfolio
      ul.shots
